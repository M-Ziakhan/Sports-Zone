
@{
    Layout = null;
}

<title>JZ Sports Zone | Login</title>
<link href="~/themes/default/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
<body style="background-image:url('https://motionarray.imgix.net/preview-279485-UenCPR1wxc-high_0008.jpg'); background-repeat:no-repeat; background-size:cover">
    <link href="~/themes/default/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/themes/default/login/style.css" rel="stylesheet" />
    <h2 style="color:white">Welcome to JZ Sports Zone</h2>
    <a style="font-size:24px; color:white; margin-top:-10px" href="/">⬅️ Go to Home </a>
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form action="/account/login" method="post" id="mainloginform">
                <h1>Sign in</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fa fa-facebook"></i></a>
                    <a href="#" class="social"><i class="fa fa-google-plus"></i></a>
                    <a href="#" class="social"><i class="fa fa-linkedin"></i></a>
                </div>
                <span>Please login to continue...</span>
                <input type="email" placeholder="Email" name="Email" required />
                <input type="password" placeholder="Password" name="Password" required />
                <!--<a href="#">Forgot your password?</a>-->
                <input style="color:orangered; border:1px solid orangered" class="btn btn-outline-danger" type="submit" value="Sign In" form="mainloginform" />
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button href="#" onclick="navigatetoregister()" class="btn btn-outline-success ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.Message != null)
    {
        <div style="text-align:center">
            <p style="color:red">@ViewBag.Message</p>
        </div>
    }
        <footer>
            <p>
                Created with <i class="fa fa-heart"></i> by
                <a href="#">JZ Sports Zone</a>
            </p>
        </footer>
    <script>
        function navigatetoregister() {
            window.location.href = '/account/register';
        }
    </script>
</body>