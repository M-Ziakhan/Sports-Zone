@model List<feedback>
<div class="comment-holder theme-padding-bottom" style="margin-top:10px">
    <h2>All Reviews - @Model.Count</h2>
    <ul>
        @if (Model.Count == 0)
        {
        <li>
            <h5>No Reviews Found!</h5>
        </li>
        }
        @for (int i = 0; i < Model.Count; i++)
        {
            <li>
                <div class="comment-detail">
                    <h5>
                        @if (Model[i].users.usertype == "Club")
                        {
                        <a href="/clubs/@Model[i].users.username">
                            @Model[i].users.username | @Model[i].users.usertype
                        </a>
                        }
                        else if (Model[i].users.usertype == "Player")
                        {
                            <a href="/players/@Model[i].users.username">
                                @Model[i].users.username | @Model[i].users.usertype
                            </a>
                        }
                        else if (Model[i].users.usertype == "Coach")
                        {
                            <a href="/coachs/@Model[i].users.username">
                                @Model[i].users.username | @Model[i].users.usertype
                            </a>
                        }

                    </h5>
                    <span>@Model[i].C_date</span>
                    <p>@Model[i].msg</p>
                    @for (int j = 0; j < @Model[i].rating; j++)
                    {
                    <a class="reply-btn" style="display:inline-block" href="#"><i class="fa fa-star"></i></a>
                    }
                </div>
            </li>
        }
    </ul>
</div>
