<!-- Main Content -->
@section scripts{
    <script>
    var dt = `@Model[0].info`;
    $("#clubbio").text(dt);
    </script>
    <script>
        $(document).ready(function () {
            var url = "/feedback/loadfeedbacks";
            var data = new FormData();
            var uid = @Model[0].userid;
            data.append("userid", uid);
            $.ajax({
                url: url,
                data: data,
                type: "POST",
                processData: false,
                contentType: false,
                success: function (response) {
                    $("#fbdata").html(response);
                },
                error: function () {
                    console.error('Unable to contact with server for loading feedbacks!')
                }
            })
        });
    </script>
}
