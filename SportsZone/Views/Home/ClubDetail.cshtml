@model List<clubs>
@{
    ViewBag.Title = "ClubDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>@Model[0].clubname | JZ Sports Zone | Club</title>
<div class="page-heading-breadcrumbs">
    <div class="container">
        <h2>@Model[0].clubname</h2>
        <ul class="breadcrumbs">
            <li><a href="/">Home</a></li>
            <li><a href="/clubs">Clubs</a></li>
            <li>@Model[0].clubname</li>
        </ul>
    </div>
</div>
<p id="userid" style="display:none">@Model[0].userid</p>
<!-- Page Heading & Breadcrumbs  -->
<!-- Page Heading banner -->
<div style="height:400px; background-image:url(/uploads/media/@Model[0].cover); background-position:center; background-size:contain" class="overlay-dark theme-padding parallax-window">
</div>
<!-- Page Heading banner -->
<!-- Main Content -->
<main class="main-content" style="padding-top:20px">

    <!-- Team Detail -->
